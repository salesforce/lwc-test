{
    "name": "lwc-test",
    "private": true,
    "description": "LWC test plugins and utilities",
    "scripts": {
        "prepare": "husky install",
        "test": "jest --no-cache",
        "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
        "lint": "eslint packages/ test/ --ext=js,mjs,ts",
        "format": "prettier --write '{packages,test}/**/*.{js,mjs,ts,json,md}'",
        "format:check": "prettier --check '{packages,test}/**/*.{js,mjs,ts,json,md}'",
        "release:publish:ci": "./scripts/release/publish.js",
        "release:version": "./scripts/release/version.js"
    },
    "workspaces": [
        "packages/@lwc/*",
        "test"
    ],
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@lwc/compiler": "^5.0.2",
        "@lwc/engine-dom": "^5.0.2",
        "@lwc/engine-server": "^5.0.2",
        "@lwc/synthetic-shadow": "^5.0.2",
        "@lwc/wire-service": "^5.0.2",
        "@types/jest": "^29.5.8",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "eslint": "^8.53.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lerna": "^7.4.2",
        "lint-staged": "^13.2.3",
        "prettier": "^3.1.0",
        "semver": "^7.5.4"
    },
    "lint-staged": {
        "**/*.{js,mjs,ts}": "eslint --fix",
        "**/*.{js,mjs,ts,json,md}": "prettier --write"
    },
    "volta": {
        "node": "18.18.0",
        "yarn": "1.22.19"
    }
}
