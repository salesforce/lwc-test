{
    "name": "lwc-test",
    "private": true,
    "description": "LWC test plugins and utilities",
    "scripts": {
        "test": "yarn test:unit && yarn test:integration",
        "test:unit": "jest --config ./scripts/jest/root.config.js --no-cache",
        "test:integration": "jest --config ./test/jest.config.js --no-cache",
        "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
        "lint": "eslint packages/ scripts/",
        "format": "prettier --write '{packages,scripts}/**/*.{js,ts,json,md}'",
        "release": "yarn install && ./scripts/release_npm.sh"
    },
    "workspaces": [
        "packages/@lwc/*",
        "test"
    ],
    "license": "MIT",
    "devDependencies": {
        "@lwc/compiler": "^1.10.0",
        "@lwc/engine": "^1.10.0",
        "@lwc/synthetic-shadow": "^1.10.0",
        "@lwc/wire-service": "^1.10.0",
        "@types/jest": "^26.0.20",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.17.0",
        "jest": "^26.6.3",
        "lerna": "^3.22.1",
        "prettier": "^2.2.1"
    }
}
