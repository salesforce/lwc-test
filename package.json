{
    "name": "lwc-test",
    "private": true,
    "description": "LWC test plugins and utilities",
    "scripts": {
        "test": "jest --no-cache",
        "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
        "lint": "eslint packages/",
        "format": "prettier --write '{packages,test}/**/*.{js,ts,json,md}'",
        "release:publish:ci": "./scripts/release/publish.js",
        "release:version": "./scripts/release/version.js"

    },
    "workspaces": [
        "packages/@lwc/*",
        "test"
    ],
    "license": "MIT",
    "devDependencies": {
        "@lwc/compiler": "^2.1.0",
        "@lwc/engine-dom": "^2.1.0",
        "@lwc/synthetic-shadow": "^2.1.0",
        "@lwc/wire-service": "^2.1.0",
        "@types/jest": "^26.0.21",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.22.0",
        "jest": "^26.6.3",
        "lerna": "^4.0.0",
        "prettier": "^2.2.1"
    }
}
